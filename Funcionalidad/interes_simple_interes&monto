        return "Error, los datos no pueden ser menores a 1"
    }else{
        let I=C*(i/100)*(t/12);
        return I.toFixed(2);
    }
    
}

function calcularMontosimple(i,t,C){
    if(i<=0||t<=0||C<=0){
        return "Error, los datos no pueden ser menores a 1"
    }else{
        let S=C*(1+(i/100)*(t/12));
